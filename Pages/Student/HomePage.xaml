<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.HomePage"
             x:Name="StudentHomePage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#0891B2"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="#0891B2" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Messages Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer to push profile and logout to bottom -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Welcome Banner -->
                <Border BackgroundColor="#0891B2"
                        StrokeThickness="0"
                        Padding="30,25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding WelcomeMessage}" 
                               TextColor="White" 
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="MontserratBold"/>
                        <Label Text="Here's what's happening with your studies today." 
                               TextColor="White" 
                               FontSize="14"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Statistics Cards Row -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Unread Messages Card -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Unread Messages" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸ“¬" FontSize="20"/>
                            </Grid>
                            <Label Text="{Binding UnreadMessagesCount}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#0891B2"/>
                            <Label Text="{Binding UnreadMessagesSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- New Announcements Card -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="New Announcements" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸ“£" FontSize="20"/>
                            </Grid>
                            <Label Text="{Binding NewAnnouncementsCount}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#0891B2"/>
                            <Label Text="{Binding NewAnnouncementsSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Active Tickets Card -->
                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Active Tickets" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸŽŸï¸" FontSize="20"/>
                            </Grid>
                            <Label Text="{Binding ActiveTicketsCount}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#0891B2"/>
                            <Label Text="{Binding ActiveTicketsSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Content Row: Recent Messages and Upcoming Events -->
                <Grid ColumnDefinitions="1.2*,*" ColumnSpacing="20">
                    
                    <!-- Recent Messages Section -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                                <Label Text="ðŸ’¬" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=" Recent Messages" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                         FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Your latest conversations" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>

                            <Label Text="No messages yet"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   HorizontalOptions="Start"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding RecentMessages.Count}"
                                                 Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <VerticalStackLayout Spacing="10"
                                                 BindableLayout.ItemsSource="{Binding RecentMessages}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="#F9FAFB"
                                                Padding="12"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                                <Border Grid.Column="0"
                                                        BackgroundColor="#DBEAFE"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <Ellipse/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding Initials}" 
                                                           TextColor="#0891B2"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                    <Label Text="{Binding ParticipantName}" 
                                                           FontSize="13" 
                                                           FontAttributes="Bold"
                                                           TextColor="#2C3E50"/>
                                                    <Label Text="{Binding LastMessage}" 
                                                           FontSize="12" 
                                                           TextColor="#6B7280"
                                                           LineBreakMode="TailTruncation"/>
                                                    <Border BackgroundColor="#10B981"
                                                            Padding="6,2"
                                                            WidthRequest="40"
                                                            StrokeThickness="0"
                                                            IsVisible="True">
                                                        <Border.Triggers>
                                                            <DataTrigger TargetType="Border"
                                                                         Binding="{Binding UnreadCount}"
                                                                         Value="0">
                                                                <Setter Property="IsVisible" Value="False"/>
                                                            </DataTrigger>
                                                        </Border.Triggers>
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="4"/>
                                                        </Border.StrokeShape>
                                                        <Label Text="New" 
                                                               TextColor="White"
                                                               FontSize="10"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                    </Border>
                                                </VerticalStackLayout>
                                                <Label Grid.Column="2" 
                                                       Text="{Binding LastMessageLocalTime, StringFormat='{0:MMM d, h:mm tt}'}" 
                                                       FontSize="11" 
                                                       TextColor="#9CA3AF"
                                                       VerticalOptions="Start"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <!-- View All Messages Button -->
                            <Button Text="View All Messages"
                                    BackgroundColor="Transparent"
                                    TextColor="#0891B2"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="0"
                                    Margin="0,5,0,0"
                                    Clicked="OnViewAllMessagesTapped"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Latest Announcements Section -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                                <Label Text="ðŸ“¢" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=" Latest Announcements" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                         FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Stay updated with campus news" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>

                            <Label Text="No announcements available"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   HorizontalOptions="Start"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding LatestAnnouncements.Count}"
                                                 Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <VerticalStackLayout Spacing="10"
                                                 BindableLayout.ItemsSource="{Binding LatestAnnouncements}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="#F9FAFB"
                                                Padding="12"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="6">
                                                <HorizontalStackLayout Spacing="10">
                                                    <Border BackgroundColor="#E5F3FA"
                                                            WidthRequest="40"
                                                            HeightRequest="40"
                                                            StrokeThickness="0">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="6"/>
                                                        </Border.StrokeShape>
                                                        <Label Text="ðŸ“„" 
                                                               FontSize="20"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"/>
                                                    </Border>
                                                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                                        <Label Text="{Binding Title}" 
                                                               FontSize="13" 
                                                               FontAttributes="Bold"
                                                               TextColor="#2C3E50"/>
                                                        <Label Text="{Binding Content}" 
                                                               FontSize="12" 
                                                               TextColor="#6B7280"
                                                               LineBreakMode="TailTruncation"/>
                                                    </VerticalStackLayout>
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Spacing="10">
                                                    <Border BackgroundColor="#0891B2"
                                                            Padding="6,2"
                                                            StrokeThickness="0"
                                                            HorizontalOptions="Start">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="4"/>
                                                        </Border.StrokeShape>
                                                        <Label Text="{Binding VisibilityLabel}"
                                                               TextColor="White"
                                                               FontSize="10"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                    </Border>
                                                    <Label Text="{Binding CreatedAt, StringFormat='{0:MMM d, h:mm tt}'}"
                                                           FontSize="11"
                                                           TextColor="#9CA3AF"
                                                           VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <Button Text="View All Announcements"
                                    BackgroundColor="Transparent"
                                    TextColor="#0891B2"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="0"
                                    Clicked="OnViewAllAnnouncementsTapped"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
