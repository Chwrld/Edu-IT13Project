<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppIT13.Models"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Student.MessagesPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#0891B2"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="#0891B2" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Network Status Indicator -->
                <ContentView Grid.Column="2"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe88a;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                    
                    <!-- Classes Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe02f;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Classes" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe0bf;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="White"/>
                            <Label Text="Messages" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe98e;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe638;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe7fd;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe9ba;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#EF4444"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="380,*">
            
            <!-- Conversations List Panel -->
            <Border Grid.Column="0" 
                    BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="0">
                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Messages Header -->
                    <Border Grid.Row="0"
                            Padding="20,20,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                            <Label Text="Messages" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   FontFamily="MontserratBold"
                                   TextColor="#2C3E50"
                                   VerticalOptions="Center"/>
                            <Border Grid.Column="1"
                                    BackgroundColor="#0891B2"
                                    Padding="14,8"
                                    StrokeThickness="0"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="18"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnComposeMessageTapped"/>
                                </Border.GestureRecognizers>
                                <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                    <Label Text="ï¼‹" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="New Message" TextColor="White" FontSize="13"/>
                                </HorizontalStackLayout>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Search Bar -->
                    <Border Grid.Row="1"
                            Padding="20,0,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Border BackgroundColor="#F3F4F6"
                                Padding="12,8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ”" FontSize="16" VerticalOptions="Center"/>
                                <Entry Placeholder="Search conversations..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"
                                       HorizontalOptions="FillAndExpand"/>
                            </HorizontalStackLayout>
                        </Border>
                    </Border>

                    <!-- Conversations CollectionView - Bound to data -->
                    <CollectionView Grid.Row="2"
                                    x:Name="ConversationsCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="OnConversationsSelectionChanged"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="local:Conversation">
                                <Border BackgroundColor="White"
                                        Padding="20,15"
                                        StrokeThickness="0"
                                        Margin="0,0,0,1"
                                        InputTransparent="False">
                                    <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                                        <!-- Avatar -->
                                        <Border Grid.Column="0"
                                                BackgroundColor="{Binding AvatarColor}"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <Ellipse/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Initials}" 
                                                   TextColor="White"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <!-- Conversation Info -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                            <Label Text="{Binding ParticipantName}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"/>
                                            <Label Text="{Binding ParticipantRole}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding LastMessage}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"
                                                   LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>
                                        
                                        <!-- Time and Unread Badge -->
                                        <VerticalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Start">
                                            <Label Text="{Binding LastMessageLocalTime, StringFormat='{0:t}'}" 
                                                   FontSize="11" 
                                                   TextColor="#6B7280"
                                                   HorizontalOptions="End"/>
                                            <Border BackgroundColor="#0891B2"
                                                    WidthRequest="24"
                                                    HeightRequest="24"
                                                    StrokeThickness="0"
                                                    HorizontalOptions="End"
                                                    IsVisible="False">
                                                <Border.StrokeShape>
                                                    <Ellipse/>
                                                </Border.StrokeShape>
                                                <Label Text="{Binding UnreadCount}" 
                                                       TextColor="White"
                                                       FontSize="11"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>

            <!-- Chat Area -->
            <Border Grid.Column="1" 
                    BackgroundColor="#F9FAFB"
                    StrokeThickness="0">
                <Grid RowDefinitions="*,80">
                    
                    <!-- Empty State - No Messages -->
                    <VerticalStackLayout x:Name="NoMessagesPlaceholder"
                                        Grid.Row="0"
                                        Spacing="20"
                                        Padding="40"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center">
                        <!-- Icon -->
                        <Label Text="ðŸ’¬" 
                               FontSize="80"
                               HorizontalOptions="Center"/>
                        
                        <!-- Title -->
                        <Label Text="No Messages" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               HorizontalOptions="Center"/>
                        
                        <!-- Description -->
                        <Label Text="Select a conversation to start messaging" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- Messages Area - Dynamic -->
                    <ScrollView x:Name="MessagesScrollView"
                                Grid.Row="0" 
                                Padding="25,20" 
                                IsVisible="False"
                                VerticalOptions="FillAndExpand">
                        <VerticalStackLayout x:Name="MessagesStackLayout" Spacing="15"/>
                    </ScrollView>

                    <!-- Message Input Area -->
                    <Border Grid.Row="1" 
                            BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="25,15">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="ðŸ“Ž" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnAttachFileTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border Grid.Column="1"
                                    BackgroundColor="#F3F4F6"
                                    Padding="15,8"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry x:Name="MessageEntry"
                                       Placeholder="Type your message..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Column="2"
                                    BackgroundColor="#0891B2"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSendMessageTapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="âž¤" 
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

        </Grid>

        <!-- Compose Overlay -->
        <Grid x:Name="ComposeOverlay"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              IsVisible="False">
            <BoxView Color="#80000000"
                     InputTransparent="False">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnComposeOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border x:Name="ComposeCard"
                    WidthRequest="600"
                    BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Start a new conversation"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label Text="Choose a teacher and send a direct message."
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Border Grid.Column="1"
                                BackgroundColor="#F3F4F6"
                                WidthRequest="36"
                                HeightRequest="36"
                                StrokeThickness="0"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnComposeOverlayTapped"/>
                            </Border.GestureRecognizers>
                            <Label Text="âœ•"
                                   FontSize="14"
                                   TextColor="#4B5563"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>

                    <Label x:Name="ComposeEmptyStateLabel"
                           Text="No available teachers to message right now."
                           TextColor="#6B7280"
                           FontSize="13"
                           IsVisible="False"/>

                    <CollectionView x:Name="ComposeRecipientsCollectionView"
                                    HeightRequest="220"
                                    SelectionMode="Single"
                                    SelectionChanged="OnComposeRecipientSelectionChanged"
                                    IsVisible="True">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="14"
                                        Margin="0,0,0,10"
                                        StrokeThickness="1">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnComposeRecipientTapped"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#F9FAFB"/>
                                                    <Setter Property="Stroke" Value="#E5E7EB"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#E0F2FE"/>
                                                    <Setter Property="Stroke" Value="#0891B2"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                                        <Border BackgroundColor="{Binding AvatarColor}"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeThickness="0"
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <Ellipse/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Initials}"
                                                   TextColor="White"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding DisplayName}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#111827"/>
                                            <Label Text="{Binding Role}"
                                                   FontSize="12"
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding Email}"
                                                   FontSize="12"
                                                   TextColor="#4B5563"/>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="2"
                                               Text="Select"
                                               FontSize="12"
                                               TextColor="#0891B2"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Border BackgroundColor="#F3F4F6"
                            Padding="12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Editor x:Name="ComposeMessageEditor"
                                Placeholder="Type your message..."
                                AutoSize="TextChanges"
                                BackgroundColor="Transparent"
                                TextColor="#1F2937"/>
                    </Border>

                    <Label x:Name="ComposeErrorLabel"
                           TextColor="#DC2626"
                           FontSize="12"
                           IsVisible="False"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Text="Cancel"
                                Grid.Column="0"
                                BackgroundColor="#F3F4F6"
                                TextColor="#1F2937"
                                Clicked="OnComposeCancelClicked"/>
                        <Button Text="Send Message"
                                Grid.Column="1"
                                BackgroundColor="#0891B2"
                                TextColor="White"
                                Clicked="OnComposeSendClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
