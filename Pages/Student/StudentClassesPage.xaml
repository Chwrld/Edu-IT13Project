<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppIT13.Models"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Student.StudentClassesPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#0891B2"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="#0891B2" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Network Status Indicator -->
                <ContentView Grid.Column="2"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Classes Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“š" FontSize="18"/>
                            <Label Text="Classes" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Messages Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="My Classes"
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <Label Text="View your enrolled classes and academic progress"
                           FontSize="14" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Classes List -->
                <CollectionView x:Name="ClassesCollectionView"
                                SelectionMode="None">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Spacing="12" Padding="40">
                            <Label Text="ðŸ“š" FontSize="48" HorizontalOptions="Center"/>
                            <Label Text="No classes yet"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#2C3E50"/>
                            <Label Text="You haven't enrolled in any classes yet."
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ClassModel">
                            <Border BackgroundColor="White"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    Padding="25"
                                    Margin="0,0,0,15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="15">
                                    <!-- Class Header -->
                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                                            <Label Text="{Binding Name}" 
                                                   FontSize="20" 
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"/>
                                            <HorizontalStackLayout Spacing="12">
                                                <Label Text="{Binding Code}" 
                                                       FontSize="13" 
                                                       FontAttributes="Bold"
                                                       TextColor="#0891B2"/>
                                                <Label Text="â€¢" 
                                                       FontSize="13" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding AcademicTerm}" 
                                                       FontSize="13" 
                                                       TextColor="#6B7280"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        
                                        <Border Grid.Column="1"
                                                BackgroundColor="{Binding StatusColor}"
                                                Padding="12,6"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Status}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding StatusTextColor}"/>
                                        </Border>
                                    </Grid>

                                    <!-- Class Info -->
                                    <HorizontalStackLayout Spacing="20">
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="ðŸ“…" FontSize="14"/>
                                            <Label Text="{Binding Schedule}" 
                                                   FontSize="13" 
                                                   TextColor="#6B7280"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="ðŸ“Š" FontSize="14"/>
                                            <Label Text="{Binding CreditsDisplay}" 
                                                   FontSize="13" 
                                                   TextColor="#6B7280"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>

                                    <!-- Action Buttons -->
                                    <HorizontalStackLayout Spacing="10">
                                        <Button Text="ðŸ“ Assignments"
                                                BackgroundColor="#0891B2"
                                                TextColor="White"
                                                FontSize="13"
                                                Padding="15,10"
                                                CornerRadius="8"
                                                Clicked="OnViewAssignmentsClicked"
                                                CommandParameter="{Binding .}"/>
                                        <Button Text="ðŸ“Š Grades"
                                                BackgroundColor="#059669"
                                                TextColor="White"
                                                FontSize="13"
                                                Padding="15,10"
                                                CornerRadius="8"
                                                Clicked="OnViewGradesClicked"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
</ContentPage>
