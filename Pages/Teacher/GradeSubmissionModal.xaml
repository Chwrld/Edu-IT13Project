<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Teacher.GradeSubmissionModal"
             BackgroundColor="#F5F7FA">

    <Border BackgroundColor="White"
            Margin="40"
            Padding="0"
            StrokeThickness="0"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="800"
            MaximumHeightRequest="600">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16"/>
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.15" Radius="20" Offset="0,10"/>
        </Border.Shadow>

        <Grid RowDefinitions="Auto,*,Auto" Padding="30">
            <!-- Header -->
            <Grid Row="0" ColumnDefinitions="*,Auto" Padding="0,0,0,20">
                <VerticalStackLayout Spacing="4">
                    <Label x:Name="AssignmentTitleLabel"
                           Text="Assignment Title"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label x:Name="StudentInfoLabel"
                           Text="Student Information"
                           FontSize="14"
                           TextColor="#6B7280"/>
                </VerticalStackLayout>
                <Button Grid.Column="1"
                        Text="âœ•"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="Transparent"
                        TextColor="#6B7280"
                        FontSize="22"
                        Clicked="OnCancelClicked"/>
            </Grid>

            <!-- Content -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="20">
                    
                    <!-- Submission Details -->
                    <Border BackgroundColor="#F9FAFB"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Submission Details"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="Submitted At:"
                                       FontSize="14"
                                       TextColor="#6B7280"/>
                                <Label x:Name="SubmittedAtLabel"
                                       Grid.Row="0" Grid.Column="1"
                                       Text="Dec 15, 2025 3:45 PM"
                                       FontSize="14"
                                       TextColor="#1F2937"
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="Status:"
                                       FontSize="14"
                                       TextColor="#6B7280"/>
                                <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                    <Border x:Name="StatusBadge"
                                            BackgroundColor="#3B82F6"
                                            Padding="8,4"
                                            StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12"/>
                                        </Border.StrokeShape>
                                        <Label x:Name="StatusLabel"
                                               Text="Submitted"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold"/>
                                    </Border>
                                </HorizontalStackLayout>

                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="Assignment Points:"
                                       FontSize="14"
                                       TextColor="#6B7280"/>
                                <Label x:Name="MaxScoreLabel"
                                       Grid.Row="2" Grid.Column="1"
                                       Text="100 points"
                                       FontSize="14"
                                       TextColor="#1F2937"
                                       FontAttributes="Bold"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Grading Section -->
                    <Border BackgroundColor="White"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Grade Assignment"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Score"
                                       FontSize="14"
                                       TextColor="#374151"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Entry x:Name="ScoreEntry"
                                           Placeholder="Enter score"
                                           Keyboard="Numeric"
                                           WidthRequest="120"
                                           FontSize="16"
                                           TextColor="#1F2937"/>
                                    <Label x:Name="OutOfLabel"
                                           Text="/ 100"
                                           FontSize="16"
                                           TextColor="#6B7280"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="8">
                                <Label Text="Feedback / Notes (Optional)"
                                       FontSize="14"
                                       TextColor="#374151"/>
                                <Editor x:Name="NotesEditor"
                                        Placeholder="Add feedback for the student..."
                                        HeightRequest="120"
                                        FontSize="14"
                                        TextColor="#1F2937"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Submission Files/Content (if available) -->
                    <Border BackgroundColor="#F9FAFB"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Submission Content"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label x:Name="SubmissionContentLabel"
                                   Text="Student's submission content will appear here."
                                   FontSize="14"
                                   TextColor="#6B7280"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </ScrollView>

            <!-- Footer Actions -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,Auto,Auto"
                  Padding="0,20,0,0"
                  ColumnSpacing="10">
                <Button Grid.Column="1"
                        Text="Cancel"
                        BackgroundColor="#E5E7EB"
                        TextColor="#374151"
                        WidthRequest="120"
                        Clicked="OnCancelClicked"/>
                <Button Grid.Column="2"
                        x:Name="SaveButton"
                        Text="Save Grade"
                        BackgroundColor="#059669"
                        TextColor="White"
                        WidthRequest="120"
                        Clicked="OnSaveGradeClicked"/>
            </Grid>
        </Grid>
    </Border>
</ContentPage>
