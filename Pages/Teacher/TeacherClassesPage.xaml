<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppIT13.Models"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Teacher.TeacherClassesPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#059669"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="T" 
                               TextColor="#059669" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Teacher Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Network Status Indicator -->
                <ContentView Grid.Column="2"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Classes (Active) -->
                    <Border BackgroundColor="#059669" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“š" FontSize="18"/>
                            <Label Text="Classes" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Messages -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Teacher Profile & Logout -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¨â€ðŸ«" FontSize="18"/>
                            <Label Text="Faculty" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="My Classes" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <Label Text="Manage your classes and view student progress." 
                           FontSize="14" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Filter Tabs -->
                <HorizontalStackLayout Spacing="10">
                    <Border x:Name="AllFilter"
                            BackgroundColor="#059669"
                            Padding="12,8"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Label x:Name="AllFilterLabel"
                               Text="All" 
                               TextColor="White" 
                               FontSize="13"
                               FontAttributes="Bold"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnFilterTapped"
                                CommandParameter="All"/>
                        </Border.GestureRecognizers>
                    </Border>
                    <Border x:Name="ActiveFilter"
                            BackgroundColor="#E5E7EB"
                            Padding="12,8"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Label x:Name="ActiveFilterLabel"
                               Text="Active" 
                               TextColor="#6B7280" 
                               FontSize="13"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnFilterTapped"
                                CommandParameter="Active"/>
                        </Border.GestureRecognizers>
                    </Border>
                    <Border x:Name="InactiveFilter"
                            BackgroundColor="#E5E7EB"
                            Padding="12,8"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Label x:Name="InactiveFilterLabel"
                               Text="Inactive" 
                               TextColor="#6B7280" 
                               FontSize="13"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnFilterTapped"
                                CommandParameter="Inactive"/>
                        </Border.GestureRecognizers>
                    </Border>
                </HorizontalStackLayout>

                <!-- Classes List -->
                <CollectionView x:Name="CoursesCollectionView"
                                SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="40,60" Spacing="12" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="No classes yet"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#4B5563"
                                   HorizontalOptions="Center"/>
                            <Label Text="Once classes are assigned to you, they will appear here automatically."
                                   FontSize="14"
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ClassModel">
                            <Border BackgroundColor="White"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    Padding="20"
                                    Margin="0,0,0,15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="8">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"
                                           LineBreakMode="WordWrap"/>

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding Code}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#059669"/>

                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="20">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="ðŸ‘¥" FontSize="14"/>
                                            <Label Text="{Binding StudentCountDisplay}"
                                                   FontSize="13"
                                                   TextColor="#6B7280"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="ðŸ“…" FontSize="14"/>
                                            <Label Text="{Binding AcademicTerm}"
                                                   FontSize="13"
                                                   TextColor="#6B7280"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>

                                    <Border Grid.Row="0" Grid.Column="1"
                                            BackgroundColor="{Binding StatusColor}"
                                            Padding="8,4"
                                            StrokeThickness="0"
                                            VerticalOptions="Start"
                                            HorizontalOptions="End">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Status}"
                                               TextColor="{Binding StatusTextColor}"
                                               FontSize="12"
                                               FontAttributes="Bold"/>
                                    </Border>

                                    <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                            Text="View Class"
                                            BackgroundColor="#059669"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="6"
                                            HeightRequest="40"
                                            Margin="0,10,0,0"
                                            Clicked="OnViewClassClicked"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
