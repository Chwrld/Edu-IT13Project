<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Teacher.TeacherHomePage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#059669"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="T" 
                               TextColor="#059669" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Teacher Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Sync Button -->
                <Button Grid.Column="2"
                        Text="ðŸ”„ Sync"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="14"
                        Padding="12,8"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        Clicked="OnSyncClicked"
                        x:Name="SyncButton"/>

                <!-- Network Status Indicator -->
                <ContentView Grid.Column="3"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End"
                             Margin="10,0,0,0" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard -->
                    <Border BackgroundColor="#059669" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe871;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="White"/>
                            <Label Text="Dashboard" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Classes -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe02f;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Classes" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages (Optional) -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe0bf;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe98e;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe638;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Teacher Profile & Logout -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe7ef;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#2C3E50"/>
                            <Label Text="Faculty" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFacultyTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe9ba;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#EF4444"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Welcome Banner -->
                <Border BackgroundColor="#059669"
                        StrokeThickness="0"
                        Padding="30,25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding WelcomeTitle}"
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="MontserratBold"/>
                        <Label Text="{Binding WelcomeSubtitle}"
                               TextColor="White"
                               FontSize="14"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="My Classes" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="{Binding ClassesCount}"
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#059669"/>
                            <Label Text="{Binding ClassesSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Students" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="{Binding StudentsCount}"
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#059669"/>
                            <Label Text="{Binding StudentsSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Active Tickets" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="{Binding ActiveTicketsCount}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#0891B2"/>
                            <Label Text="{Binding TicketsSubtitle}" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Content Row: Recent Messages and Upcoming Events -->
                <Grid ColumnDefinitions="1.2*,*" ColumnSpacing="20">
                    
                    <!-- Recent Messages Section -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                                <Label Text="ðŸ’¬" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=" Recent Messages" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Your latest conversations" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>

                            <Label Text="No messages yet"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   HorizontalOptions="Start"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding RecentMessages.Count}"
                                                 Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <VerticalStackLayout Spacing="10"
                                                 BindableLayout.ItemsSource="{Binding RecentMessages}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="#F9FAFB"
                                                Padding="12"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                                <Border Grid.Column="0"
                                                        BackgroundColor="{Binding AvatarColor}"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <Ellipse/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding Initials}" 
                                                           TextColor="White"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                    <Label Text="{Binding ParticipantName}" 
                                                           FontSize="13" 
                                                           FontAttributes="Bold"
                                                           TextColor="#2C3E50"/>
                                                    <Label Text="{Binding LastMessage}" 
                                                           FontSize="12" 
                                                           TextColor="#6B7280"
                                                           LineBreakMode="TailTruncation"/>
                                                    <Border BackgroundColor="#10B981"
                                                            Padding="6,2"
                                                            WidthRequest="40"
                                                            StrokeThickness="0"
                                                            IsVisible="True">
                                                        <Border.Triggers>
                                                            <DataTrigger TargetType="Border"
                                                                         Binding="{Binding UnreadCount}"
                                                                         Value="0">
                                                                <Setter Property="IsVisible" Value="False"/>
                                                            </DataTrigger>
                                                        </Border.Triggers>
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="4"/>
                                                        </Border.StrokeShape>
                                                        <Label Text="New" 
                                                               TextColor="White"
                                                               FontSize="10"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"/>
                                                    </Border>
                                                </VerticalStackLayout>
                                                <Label Grid.Column="2" 
                                                       Text="{Binding LastMessageLocalTime, StringFormat='{0:MMM d, h:mm tt}'}" 
                                                       FontSize="11" 
                                                       TextColor="#9CA3AF"
                                                       VerticalOptions="Start"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <!-- View All Messages Button -->
                            <Button Text="View All Messages"
                                    BackgroundColor="Transparent"
                                    TextColor="#059669"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="0"
                                    Margin="0,5,0,0"
                                    Clicked="OnMessagesTapped"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Ticket Updates Section -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                               <Label Text="&#xe638;" FontFamily="MaterialIcons" FontSize="18" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                                <Label Text=" Ticket Updates" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Recently received support tickets" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>

                            <Label Text="No ticket activity yet"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   HorizontalOptions="Start"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding TicketUpdates.Count}"
                                                 Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <VerticalStackLayout Spacing="10"
                                                 BindableLayout.ItemsSource="{Binding TicketUpdates}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="{Binding CardBackgroundColor}"
                                                Padding="12"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="6">
                                                <HorizontalStackLayout Spacing="8">
                                                    <Border BackgroundColor="{Binding StatusColor}"
                                                            Padding="4,2"
                                                            StrokeThickness="0">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="3"/>
                                                        </Border.StrokeShape>
                                                        <Label Text="{Binding StatusLabel}"
                                                               TextColor="White"
                                                               FontSize="9"
                                                               FontAttributes="Bold"/>
                                                    </Border>
                                                    <Label Text="{Binding Title}"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="#2C3E50"
                                                           VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                                <Label Text="{Binding Summary}"
                                                       FontSize="11"
                                                       TextColor="#4B5563"
                                                       LineBreakMode="TailTruncation"/>
                                                <HorizontalStackLayout Spacing="8">
                                                    <Label Text="{Binding Author}"
                                                           FontSize="10"
                                                           TextColor="#4B5563"/>
                                                    <Label Text="â€¢"
                                                           FontSize="10"
                                                           TextColor="#9CA3AF"/>
                                                    <Label Text="{Binding Timestamp}"
                                                           FontSize="10"
                                                           TextColor="#9CA3AF"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <!-- View All Tickets Button -->
                            <Button Text="View All Tickets"
                                    BackgroundColor="Transparent"
                                    TextColor="#059669"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="0"
                                    Margin="0,5,0,0"
                                    Clicked="OnTicketsTapped"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Sync Progress Modal -->
        <AbsoluteLayout Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                        x:Name="SyncProgressOverlay"
                        IsVisible="False"
                        BackgroundColor="#00000080">
            <Border AbsoluteLayout.LayoutBounds="0.5, 0.5, 400, 350"
                    AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="30"
                    StrokeShape="RoundRectangle 16,16,16,16">
                <VerticalStackLayout Spacing="20">
                    <!-- Header with Icon -->
                    <HorizontalStackLayout Spacing="12" VerticalOptions="Start">
                        <Border BackgroundColor="#E0F2FE"
                                WidthRequest="48"
                                HeightRequest="48"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12,12,12,12">
                            <Label Text="ðŸ”„" FontSize="28" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Syncing to Remote Database" FontSize="16" FontAttributes="Bold" TextColor="#1F2937"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Divider -->
                    <BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>

                    <!-- Status Message -->
                    <Label x:Name="SyncStatusLabel" Text="Checking connection..." FontSize="14" TextColor="#6B7280"/>

                    <!-- Progress Bar -->
                    <VerticalStackLayout Spacing="8">
                        <ProgressBar x:Name="SyncProgressBar" Progress="0" ProgressColor="#059669" HeightRequest="6"/>
                        <Label x:Name="SyncPercentageLabel" Text="0%" FontSize="12" TextColor="#9CA3AF" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- Steps -->
                    <VerticalStackLayout Spacing="8" Padding="0,10">
                        <HorizontalStackLayout Spacing="10">
                            <Label x:Name="Step1Icon" Text="â³" FontSize="16" WidthRequest="24"/>
                            <Label Text="Checking connection..." FontSize="13" TextColor="#6B7280" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label x:Name="Step2Icon" Text="â³" FontSize="16" WidthRequest="24"/>
                            <Label Text="Syncing tables..." FontSize="13" TextColor="#6B7280" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label x:Name="Step3Icon" Text="â³" FontSize="16" WidthRequest="24"/>
                            <Label Text="Finalizing..." FontSize="13" TextColor="#6B7280" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Result Container -->
                    <Border x:Name="SyncResultContainer"
                            IsVisible="False"
                            Padding="12"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8,8,8,8">
                        <Label x:Name="SyncResultLabel" FontSize="13" TextColor="#1F2937"/>
                    </Border>

                    <!-- Close Button -->
                    <Button x:Name="SyncCloseButton"
                            Text="Close"
                            BackgroundColor="#059669"
                            TextColor="White"
                            FontSize="14"
                            Padding="0,12"
                            IsVisible="False"
                            Clicked="OnSyncCloseClicked"/>
                </VerticalStackLayout>
            </Border>
        </AbsoluteLayout>
    </Grid>
</ContentPage>
