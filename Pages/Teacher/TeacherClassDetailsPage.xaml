<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppIT13.Models"
             x:Class="MauiAppIT13.Pages.Teacher.TeacherClassDetailsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#059669"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="T" 
                               TextColor="#059669" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Teacher Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Back to Classes -->
                <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                    <Label Text="← Back to Classes" 
                           FontSize="14" 
                           TextColor="White"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackToClassesTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe871;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Classes -->
                    <Border BackgroundColor="#059669" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe02f;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="White"/>
                            <Label Text="Classes" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassesMenuTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe02f;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe98e;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe638;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Teacher Profile & Logout -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe7ef;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#2C3E50"/>
                            <Label Text="Faculty" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe9ba;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#EF4444"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Class Header -->
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="ClassTitleLabel"
                           Text="Class Name"
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <HorizontalStackLayout Spacing="15">
                        <Label x:Name="ClassCodeLabel"
                               Text="CODE-000" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#059669"/>
                        <Label Text="•" 
                               FontSize="14" 
                               TextColor="#6B7280"/>
                        <Label x:Name="ClassStudentsLabel"
                               Text="0 Students" 
                               FontSize="14" 
                               TextColor="#6B7280"/>
                        <Label Text="•" 
                               FontSize="14" 
                               TextColor="#6B7280"/>
                        <Label x:Name="ClassTermLabel"
                               Text="AY 0000-0000 • 1st Sem" 
                               FontSize="14" 
                               TextColor="#6B7280"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Tab Navigation -->
                <HorizontalStackLayout Spacing="10" x:Name="TabBar">
                    <Border x:Name="StudentsTab"
                            BackgroundColor="#059669"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="Students" 
                               TextColor="White" 
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStudentsTabTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <Border x:Name="AssignmentsTab"
                            BackgroundColor="#E5E7EB"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="Assignments" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAssignmentsTabTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <Border x:Name="GradesTab"
                            BackgroundColor="#E5E7EB"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="Grades" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGradesTabTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <Border x:Name="AnnouncementsTab"
                            BackgroundColor="#E5E7EB"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="Announcements" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTabTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </HorizontalStackLayout>

                <!-- Search Bar -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="15,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Entry x:Name="SearchEntry"
                           Placeholder="search..."
                           TextColor="#1F2937"
                           PlaceholderColor="#9CA3AF"
                           BackgroundColor="Transparent"
                           HeightRequest="44"
                           TextChanged="OnSearchTextChanged"/>
                </Border>

                <!-- Tab Content Container -->
                <VerticalStackLayout x:Name="TabContent" Spacing="15">
                    
                    <!-- Students Tab Content (Default) -->
                    <VerticalStackLayout x:Name="StudentsContent" Spacing="15">
                        
                        <!-- Student List Header -->
                        <Label Text="Enrolled Students" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>

                        <!-- Student List -->
                        <CollectionView x:Name="StudentsCollectionView"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ClassStudent">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="#E5E7EB"
                                            Padding="20"
                                            Margin="0,0,0,10">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                            <Border Grid.Column="0"
                                                    BackgroundColor="#059669"
                                                    WidthRequest="50"
                                                    HeightRequest="50"
                                                    StrokeThickness="0">
                                                <Border.StrokeShape>
                                                    <Ellipse/>
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Initials}" 
                                                       TextColor="White" 
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                <Label Text="{Binding DisplayName}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"/>
                                                <Label Text="{Binding StudentNumber}" 
                                                       FontSize="13" 
                                                       TextColor="#6B7280"/>
                                            </VerticalStackLayout>

                                            <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                                                <Button Text="Message"
                                                        BackgroundColor="#3B82F6"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        Padding="10,5"
                                                        CornerRadius="5"
                                                        Clicked="OnMessageStudentClicked"
                                                        CommandParameter="{Binding .}">
                                                    <Button.ImageSource>
                                                        <FontImageSource Glyph="&#xe625;" FontFamily="MaterialIcons" Size="16" Color="White"/>
                                                    </Button.ImageSource>
                                                </Button>
                                                <Button Text="View Concerns"
                                                        BackgroundColor="#F59E0B"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        Padding="10,5"
                                                        CornerRadius="5"
                                                        Clicked="OnViewConcernsClicked"
                                                        CommandParameter="{Binding .}">
                                                    <Button.ImageSource>
                                                        <FontImageSource Glyph="&#xf847;" FontFamily="MaterialIcons" Size="16" Color="White"/>
                                                    </Button.ImageSource>
                                                </Button>
                                                <Button Text="View Details"
                                                        BackgroundColor="#059669"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        Padding="10,5"
                                                        CornerRadius="5"
                                                        Clicked="OnViewStudentDetailsClicked"
                                                        CommandParameter="{Binding .}">
                                                    <Button.ImageSource>
                                                        <FontImageSource Glyph="&#xe85e;" FontFamily="MaterialIcons" Size="16" Color="White"/>
                                                    </Button.ImageSource>
                                                </Button>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Assignments Tab Content (Hidden by default) -->
                    <VerticalStackLayout x:Name="AssignmentsContent" IsVisible="False" Spacing="15">
                        <HorizontalStackLayout Spacing="15">
                            <Label Text="Assignments" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   VerticalOptions="Center"/>
                            <Button Text="+ Create Assignment"
                                    BackgroundColor="#059669"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="15,8"
                                    CornerRadius="6"
                                    Clicked="OnCreateAssignmentClicked"/>
                        </HorizontalStackLayout>

                        <CollectionView x:Name="AssignmentsCollectionView"
                                        SelectionMode="None">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout Spacing="6" Padding="20" BackgroundColor="White">
                                    <Label Text="No assignments yet"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="#2C3E50"/>
                                    <Label Text="Create an assignment to get started."
                                           FontSize="13"
                                           HorizontalOptions="Center"
                                           TextColor="#6B7280"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ClassAssignment">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="#E5E7EB"
                                            Padding="20"
                                            Margin="0,0,0,10">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnAssignmentTapped" CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <VerticalStackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                                <Label Text="{Binding Title}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"
                                                       HorizontalOptions="StartAndExpand"/>
                                                <Border BackgroundColor="#FEF3C7"
                                                        Padding="8,4"
                                                        StrokeThickness="0"
                                                        HorizontalOptions="End">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="20"/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding DeadlineBadge}"
                                                           FontSize="12"
                                                           TextColor="#B45309"/>
                                                </Border>
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Description}"
                                                   FontSize="13"
                                                   TextColor="#6B7280"/>
                                            <HorizontalStackLayout Spacing="15">
                                                <Label Text="{Binding DeadlineDisplay}"
                                                       FontSize="12"
                                                       TextColor="#F59E0B"/>
                                                <Label Text="{Binding SubmissionSummary}"
                                                       FontSize="12"
                                                       TextColor="#059669"/>
                                                <Label Text="{Binding TotalPoints, StringFormat='Points: {0}'}"
                                                       FontSize="12"
                                                       TextColor="#4B5563"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Grades Tab Content (Hidden by default) -->
                    <VerticalStackLayout x:Name="GradesContent" IsVisible="False" Spacing="15">
                        <Label Text="Student Grades" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>

                        <!-- Grades Table -->
                        <Border BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="10">
                                <!-- Table Header -->
                                <Grid ColumnDefinitions="2*,*,*,*,*,*,Auto" ColumnSpacing="10" Padding="10"
                                      BackgroundColor="#F9FAFB">
                                    <Label Grid.Column="0" Text="Student" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Label Grid.Column="1" Text="Assignments" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Label Grid.Column="2" Text="Activities" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Label Grid.Column="3" Text="Exams" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Label Grid.Column="4" Text="Projects" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Label Grid.Column="5" Text="Final Avg" FontSize="13" FontAttributes="Bold" TextColor="#2C3E50"/>
                                    <Button x:Name="EditGradesButton"
                                            Grid.Column="6" 
                                            Text="Edit Grades"
                                            BackgroundColor="#059669"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="12,6"
                                            CornerRadius="6"
                                            Clicked="OnEditGradesClicked"
                                            VerticalOptions="Center"/>
                                </Grid>

                                <CollectionView x:Name="GradesCollectionView"
                                                SelectionMode="None">
                                    <CollectionView.EmptyView>
                                        <VerticalStackLayout Spacing="6" Padding="20">
                                            <Label Text="No grade records yet"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#6B7280"/>
                                        </VerticalStackLayout>
                                    </CollectionView.EmptyView>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:StudentGradeSummary">
                                            <Border BackgroundColor="Transparent"
                                                    StrokeThickness="0"
                                                    Padding="0,5">
                                                <Grid ColumnDefinitions="2*,*,*,*,*,*,Auto"
                                                      ColumnSpacing="10"
                                                      Padding="10"
                                                      BackgroundColor="#FFFFFF">
                                                    <Label Grid.Column="0" Text="{Binding StudentName}" FontSize="13" TextColor="#2C3E50"/>
                                                    <Entry Grid.Column="1"
                                                           Text="{Binding AssignmentsScore, Mode=TwoWay}"
                                                           FontSize="13"
                                                           TextColor="#059669"
                                                           Keyboard="Numeric"
                                                           Placeholder="0-100"/>
                                                    <Entry Grid.Column="2"
                                                           Text="{Binding ActivitiesScore, Mode=TwoWay}"
                                                           FontSize="13"
                                                           TextColor="#059669"
                                                           Keyboard="Numeric"
                                                           Placeholder="0-100"/>
                                                    <Entry Grid.Column="3"
                                                           Text="{Binding ExamsScore, Mode=TwoWay}"
                                                           FontSize="13"
                                                           TextColor="#059669"
                                                           Keyboard="Numeric"
                                                           Placeholder="0-100"/>
                                                    <Entry Grid.Column="4"
                                                           Text="{Binding ProjectsScore, Mode=TwoWay}"
                                                           FontSize="13"
                                                           TextColor="#059669"
                                                           Keyboard="Numeric"
                                                           Placeholder="0-100"/>
                                                    <Label Grid.Column="5" Text="{Binding FinalAverageDisplay}" FontSize="13" TextColor="#4B5563" FontAttributes="Bold"/>
                                               
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Announcements Tab Content (Hidden by default) -->
                    <VerticalStackLayout x:Name="AnnouncementsContent" IsVisible="False" Spacing="15">
                        <HorizontalStackLayout Spacing="15">
                            <Label Text="Class Announcements" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   VerticalOptions="Center"/>
                            <Button Text="+ Send Announcement"
                                    BackgroundColor="#059669"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="15,8"
                                    CornerRadius="6"
                                    Clicked="OnSendAnnouncementClicked"/>
                        </HorizontalStackLayout>

                        <!-- Announcement History -->
                        <CollectionView x:Name="AnnouncementsCollectionView"
                                        SelectionMode="None">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout Spacing="6" Padding="20" BackgroundColor="White">
                                    <Label Text="No announcements yet"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="#2C3E50"/>
                                    <Label Text="Use the button above to send the first announcement."
                                           FontSize="13"
                                           HorizontalOptions="Center"
                                           TextColor="#6B7280"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Announcement">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="#E5E7EB"
                                            Padding="20"
                                            Margin="0,0,0,10">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"/>
                                            <Label Text="{Binding Content}"
                                                   FontSize="13"
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding CreatedDisplay}"
                                                   FontSize="11"
                                                   TextColor="#9CA3AF"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Assignment Submissions Modal Overlay -->
        <Border x:Name="AssignmentSubmissionsOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#CC000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="900"
                    MaximumHeightRequest="700"
                    Padding="0"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*" Padding="30">
                    <!-- Header -->
                    <Grid Row="0" ColumnDefinitions="*,Auto" Padding="0,0,0,20">
                        <VerticalStackLayout Spacing="4">
                            <Label x:Name="SubmissionsAssignmentTitle"
                                   Text="Assignment Title"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label x:Name="SubmissionsAssignmentInfo"
                                   Text="Assignment info"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="1"
                                Text="✕"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="Transparent"
                                TextColor="#6B7280"
                                FontSize="22"
                                Clicked="OnCloseSubmissionsModal"/>
                    </Grid>

                    <!-- Loading Indicator -->
                    <VerticalStackLayout x:Name="SubmissionsLoadingIndicator"
                                        Grid.Row="1"
                                        Spacing="15"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        IsVisible="True">
                        <ActivityIndicator IsRunning="True"
                                          IsVisible="True"
                                          Color="#059669"
                                          Scale="1.5"/>
                        <Label Text="Loading submissions..."
                               FontSize="14"
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Submissions List -->
                    <ScrollView Grid.Row="1"
                               x:Name="SubmissionsScrollView"
                               IsVisible="False">
                        <VerticalStackLayout Spacing="15">
                            <Border BackgroundColor="White"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>

                                <CollectionView x:Name="SubmissionsCollectionView"
                                                SelectionMode="None">
                                    <CollectionView.Header>
                                        <Grid BackgroundColor="#F9FAFB" 
                                              Padding="20,12"
                                              ColumnDefinitions="1.5*,1.2*,1*,1*,0.8*">
                                            <Label Grid.Column="0" 
                                                   Text="Student" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   TextColor="#374151"/>
                                            <Label Grid.Column="1" 
                                                   Text="Submitted" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   TextColor="#374151"/>
                                            <Label Grid.Column="2" 
                                                   Text="Score" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   TextColor="#374151"/>
                                            <Label Grid.Column="3" 
                                                   Text="Status" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   TextColor="#374151"/>
                                            <Label Grid.Column="4" 
                                                   Text="Actions" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   TextColor="#374151"/>
                                        </Grid>
                                    </CollectionView.Header>

                                    <CollectionView.EmptyView>
                                        <Label Text="No submissions yet"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Margin="0,40"
                                               FontSize="14"
                                               TextColor="#6B7280"/>
                                    </CollectionView.EmptyView>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:AssignmentSubmission">
                                            <Grid Padding="20,16"
                                                  ColumnDefinitions="1.5*,1.2*,1*,1*,0.8*"
                                                  BackgroundColor="White">

                                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                    <Label Text="{Binding StudentName}" 
                                                           FontSize="14" 
                                                           FontAttributes="Bold"
                                                           TextColor="#1F2937"/>
                                                    <Label Text="{Binding StudentNumber}" 
                                                           FontSize="12" 
                                                           TextColor="#6B7280"/>
                                                </VerticalStackLayout>

                                                <Label Grid.Column="1" 
                                                       Text="{Binding SubmittedAtDisplay}" 
                                                       FontSize="13" 
                                                       TextColor="#4B5563"
                                                       VerticalOptions="Center"/>

                                                <Label Grid.Column="2" 
                                                       Text="{Binding ScoreDisplay}" 
                                                       FontSize="13" 
                                                       TextColor="#1F2937"
                                                       FontAttributes="Bold"
                                                       VerticalOptions="Center"/>

                                                <Border Grid.Column="3"
                                                        BackgroundColor="{Binding StatusBadgeColor}"
                                                        Padding="8,4"
                                                        StrokeThickness="0"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Start">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="12"/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding StatusDisplay}" 
                                                           TextColor="White"
                                                           FontSize="11"
                                                           FontAttributes="Bold"/>
                                                </Border>

                                                <Button Grid.Column="4"
                                                        Text="View"
                                                        Padding="12,6"
                                                        FontSize="12"
                                                        BackgroundColor="#059669"
                                                        TextColor="White"
                                                        CornerRadius="6"
                                                        CommandParameter="{Binding .}"
                                                        Clicked="OnViewSubmissionClicked"
                                                        IsEnabled="{Binding HasSubmitted}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Border>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Border>

        <!-- Message Student Modal -->
        <Border x:Name="MessageStudentOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="450"
                    Padding="30"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">
                    <Label x:Name="MessageStudentTitle"
                           Text="Message Student"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Text="Enter the message you want to send."
                           FontSize="14"
                           TextColor="#6B7280"/>
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#D1D5DB"
                            Padding="12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Editor x:Name="MessageContentEditor"
                                Placeholder="Type your message here..."
                                HeightRequest="120"
                                MaxLength="500"
                                TextColor="#1F2937"
                                PlaceholderColor="#9CA3AF"/>
                    </Border>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="OK"
                                BackgroundColor="#0891B2"
                                TextColor="White"
                                Padding="25,10"
                                CornerRadius="6"
                                Clicked="OnMessageOkClicked"/>
                        <Button Text="Cancel"
                                BackgroundColor="#4B5563"
                                TextColor="White"
                                Padding="25,10"
                                CornerRadius="6"
                                Clicked="OnMessageCancelClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Border>

        <!-- Student Concerns Modal -->
        <Border x:Name="StudentConcernsOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="500"
                    MaximumHeightRequest="600"
                    Padding="30"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">
                    <Label x:Name="ConcernsTitle"
                           Text="Student Concerns"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <ScrollView MaximumHeightRequest="400">
                        <VerticalStackLayout x:Name="ConcernsContainer" Spacing="10"/>
                    </ScrollView>
                    <Button Text="Close"
                            BackgroundColor="#4B5563"
                            TextColor="White"
                            Padding="25,10"
                            CornerRadius="6"
                            HorizontalOptions="Center"
                            Clicked="OnCloseConcernsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Border>

        <!-- Student Details Modal -->
        <Border x:Name="StudentDetailsOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="400"
                    Padding="30"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">
                    <Label Text="Student Details"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Name:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#4B5563"/>
                            <Label x:Name="DetailStudentName"
                                   FontSize="14"
                                   TextColor="#1F2937"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Student #:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#4B5563"/>
                            <Label x:Name="DetailStudentNumber"
                                   FontSize="14"
                                   TextColor="#1F2937"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Email:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#4B5563"/>
                            <Label x:Name="DetailStudentEmail"
                                   FontSize="14"
                                   TextColor="#1F2937"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Status:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#4B5563"/>
                            <Label x:Name="DetailStudentStatus"
                                   FontSize="14"
                                   TextColor="#1F2937"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <Button Text="Close"
                            BackgroundColor="#4B5563"
                            TextColor="White"
                            Padding="25,10"
                            CornerRadius="6"
                            HorizontalOptions="Center"
                            Clicked="OnCloseDetailsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Border>

        <!-- Save All Changes Confirmation Overlay -->
        <Border x:Name="SaveGradesOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="400"
                    Padding="30"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">
                    <Label Text="Save All Changes"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Text="Save all updated grades?"
                           FontSize="14"
                           TextColor="#6B7280"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="Save"
                                BackgroundColor="#0891B2"
                                TextColor="White"
                                Padding="25,10"
                                CornerRadius="6"
                                Clicked="OnSaveGradesConfirmClicked"/>
                        <Button Text="Cancel"
                                BackgroundColor="#4B5563"
                                TextColor="White"
                                Padding="25,10"
                                CornerRadius="6"
                                Clicked="OnSaveGradesCancelClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Border>
        
    </Grid>
</ContentPage>
