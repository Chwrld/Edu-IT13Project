<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolTip="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Admin.AdminReportsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <!-- Network Status Indicator -->
                <ContentView Grid.Column="2"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe871;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- User Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe7ef;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe85e;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe8ef;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe1db;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="White"/>
                            <Label Text="Reports" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>


                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Administrator Profile (Above Logout) -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0"
                            InputTransparent="False">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12" InputTransparent="True">
                            <Label Text="&#xf02e;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#6B7280"/>
                            <Label Text="Administrator" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAdminProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe9ba;" FontFamily="MaterialIcons" FontSize="20" WidthRequest="24" HorizontalTextAlignment="Center" TextColor="#FFCA2D2D"/>
                            <Label Text="Logout" 
                                   TextColor="#FFCA2D2D" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Reports &amp; Analytics" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Text="Generate comprehensive system reports" 
                           FontSize="14" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                    <!-- Total Tickets -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20"
                            toolTip:ToolTipProperties.Text="Total number of support tickets created in the selected period.
Includes every ticket regardless of status.">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                <Label Text="Total Tickets" 
                                       FontSize="13" 
                                       TextColor="#FF2A2A2B"/>
                                <Label Text="â“˜"
                                       FontSize="14"
                                       TextColor="#FF2A2A2B"
                                       toolTip:ToolTipProperties.Text="Total number of support tickets created in the selected period, across every status."/>
                            </HorizontalStackLayout>
                            <Label x:Name="TotalTicketsValueLabel"
                                   Text="1,234" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="TotalTicketsChangeLabel"
                                   Text="+12% from previous period" 
                                   FontSize="11" 
                                   TextColor="#FF454645"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Avg Response Time -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20"
                            toolTip:ToolTipProperties.Text="Average time from ticket creation to the latest update or resolution during the selected period.">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                <Label Text="Avg Response Time" 
                                       FontSize="13" 
                                       TextColor="#FF2A2A2B"/>
                                <Label Text="â“˜"
                                       FontSize="14"
                                       TextColor="#FF2A2A2B"
                                       toolTip:ToolTipProperties.Text="Average duration between ticket creation and its most recent update or resolution in the period."/>
                            </HorizontalStackLayout>
                            <Label x:Name="AvgResponseValueLabel"
                                   Text="2.4 hrs" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="AvgResponseChangeLabel"
                                   Text="-8% from previous period" 
                                   FontSize="11" 
                                   TextColor="#FF454645"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Resolution Rate -->
                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20"
                            toolTip:ToolTipProperties.Text="Percentage of tickets resolved or closed out of all tickets created in the selected period.">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                <Label Text="Resolution Rate" 
                                       FontSize="13" 
                                       TextColor="#FF2A2A2B"/>
                                <Label Text="â“˜"
                                       FontSize="14"
                                       TextColor="#FF2A2A2B"
                                       toolTip:ToolTipProperties.Text="Share of tickets marked resolved/closed out of all tickets created in the selected period."/>
                            </HorizontalStackLayout>
                            <Label x:Name="ResolutionRateValueLabel"
                                   Text="94%" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="ResolutionRateChangeLabel"
                                   Text="+2% from previous period" 
                                   FontSize="11" 
                                   TextColor="#FF454645"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Active Users -->
                    <Border Grid.Column="3"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20"
                            toolTip:ToolTipProperties.Text="Total active accounts and their growth within the selected period.">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                <Label Text="Active Users" 
                                       FontSize="13" 
                                       TextColor="#FF2A2A2B"/>
                                <Label Text="â“˜"
                                       FontSize="14"
                                       TextColor="#FF2A2A2B"
                                       toolTip:ToolTipProperties.Text="Count of accounts currently marked active plus growth within the selected period."/>
                            </HorizontalStackLayout>
                            <Label x:Name="ActiveUsersValueLabel"
                                   Text="856" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="ActiveUsersChangeLabel"
                                   Text="+5% from previous period" 
                                   FontSize="11" 
                                   TextColor="#FF454645"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Generate Report Section -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,340" ColumnSpacing="30">
                        <!-- Left Side - Form -->
                        <VerticalStackLayout Grid.Column="0" Spacing="18">
                            <Label Text="Generate Report" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>

                            <!-- Report Type Picker -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Report Type" 
                                       FontSize="13" 
                                       TextColor="#374151"
                                       FontAttributes="Bold"/>
                                <Border BackgroundColor="White"
                                        Stroke="#D1D5DB"
                                        StrokeThickness="1"
                                        Padding="12,10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Picker x:Name="ReportTypePicker"
                                            TextColor="#FF585858"
                                            BackgroundColor="Transparent"
                                            FontSize="14"
                                            FontFamily="Segoe UI"
                                            SelectedIndexChanged="OnReportTypeChanged">
                                        <Picker.Items>
                                            <x:String>Ticket Summary</x:String>                                           
                                            <x:String>Student Activity</x:String>
                                            <x:String>Adviser Performance</x:String>
                                            <x:String>Communication Analytics</x:String>
                                        </Picker.Items>
                                        <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                    </Picker>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Date Range -->
                            <Label Text="Date Range" 
                                   FontSize="13" 
                                   TextColor="#374151"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="White"
                                    Stroke="#D1D5DB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <Picker x:Name="DateRangePicker"
                                        TextColor="#1F2937"
                                        BackgroundColor="Transparent"
                                        FontSize="14"
                                        SelectedIndex="1"
                                        SelectedIndexChanged="OnDateRangeChanged">
                                    <Picker.Items>
                                        <x:String>Last 7 Days</x:String>
                                        <x:String>Last 30 Days</x:String>
                                        <x:String>Last 90 Days</x:String>
                                        <x:String>Custom Range</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>

                            <!-- Generate Button -->
                            <HorizontalStackLayout Spacing="10" Margin="0,8,0,0">
                                <Button Text="Generate Report"
                                        BackgroundColor="#005BA5"
                                        TextColor="White"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        CornerRadius="6"
                                        HeightRequest="44"
                                        HorizontalOptions="FillAndExpand"
                                        Clicked="OnGenerateReportClicked">
                                    <Button.ImageSource>
                                        <FontImageSource Glyph="&#xe85d;" FontFamily="MaterialIcons" Color="White" Size="16"/>
                                    </Button.ImageSource>
                                </Button>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Right Side - Report Preview -->
                        <Border Grid.Column="1"
                                BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                Padding="20">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Report Preview" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Period:" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="PreviewPeriodLabel"
                                           Text="Last 30 Days" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Generated:" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="PreviewGeneratedLabel"
                                           Text="Not yet generated" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>

                                <BoxView HeightRequest="1" 
                                         BackgroundColor="#E5E7EB" 
                                         Margin="0,8"/>

                                <Label Text="Quick Export"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>

                                <HorizontalStackLayout Spacing="10">
                                    <Button x:Name="QuickPdfButton"
                                            Text="ðŸ“„ Export as PDF"
                                            BackgroundColor="White"
                                            TextColor="#005BA5"
                                            FontSize="12"
                                            Padding="16,8"
                                            CornerRadius="6"
                                            BorderColor="#D1D5DB"
                                            BorderWidth="1"
                                            Clicked="OnQuickExportPdfClicked"/>
                                    <Button x:Name="QuickCsvButton"
                                            Text="ðŸ“Š Export as CSV"
                                            BackgroundColor="White"
                                            TextColor="#005BA5"
                                            FontSize="12"
                                            Padding="16,8"
                                            CornerRadius="6"
                                            BorderColor="#D1D5DB"
                                            BorderWidth="1"
                                            Clicked="OnQuickExportCsvClicked"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </Border>

                <!-- Key Insights -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Key Insights" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>

                    <!-- Improved Response Times -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe473;" 
                                   FontFamily="MaterialIcons"
                                   FontSize="24"
                                   TextColor="#FF7A7A7A"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Improved Response Times" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label x:Name="ResponseInsightValueLabel"
                                       Text="0 hrs"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#005BA5"/>
                                <Label x:Name="ResponseInsightLabel"
                                       Text="Average ticket response time decreased by 8% this month." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- User Engagement -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xf857;" 
                                   FontFamily="MaterialIcons"
                                   FontSize="24"
                                   TextColor="#FF7A7A7A"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="User Engagement" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label x:Name="EngagementInsightValueLabel"
                                       Text="0 activities"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#005BA5"/>
                                <Label x:Name="EngagementInsightLabel"
                                       Text="Student activity increased by 18% compared to last period." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Communication Volume -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="&#xe0bf;" 
                                   FontFamily="MaterialIcons"
                                   TextColor="#FF7A7A7A"
                                   FontSize="24"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Communication Volume" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label x:Name="CommunicationInsightValueLabel"
                                       Text="0 messages"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#005BA5"/>
                                <Label x:Name="CommunicationInsightLabel"
                                       Text="86 messages sent through the platform this week." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Print Preview Modal -->
        <Border x:Name="PrintPreviewOverlay"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#00000080"
                IsVisible="False"
                StrokeThickness="0">
            <Grid VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="800" HeightRequest="600">
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="30">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header -->
                        <VerticalStackLayout Grid.Row="0" Spacing="10">
                            <Label Text="Export Preview" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label x:Name="PreviewReportTitleLabel"
                                   Text="Report Title" 
                                   FontSize="16" 
                                   TextColor="#374151"/>
                            <Label x:Name="PreviewReportDetailsLabel"
                                   Text="Details" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>

                        <!-- Preview Content -->
                        <ScrollView Grid.Row="1" Margin="0,20,0,20">
                            <VerticalStackLayout x:Name="PreviewContentLayout" Spacing="10">
                                <!-- Report data will be populated here -->
                                <Label Text="Loading preview..." 
                                       FontSize="14" 
                                       TextColor="#6B7280"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </VerticalStackLayout>
                        </ScrollView>

                        <!-- Footer Buttons -->
                        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="End">
                            <Button Text="Cancel"
                                    BackgroundColor="#E5E7EB"
                                    TextColor="#374151"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    Padding="20,10"
                                    Clicked="OnPrintPreviewCancelClicked"/>
                            <Button Text="ðŸ“¥ Export"
                                    BackgroundColor="#10B981"
                                    TextColor="White"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    Padding="20,10"
                                    Clicked="OnPrintPreviewConfirmClicked"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
