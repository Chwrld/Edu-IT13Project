<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Admin.AdminTicketsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <!-- Network Status Indicator -->
                <ContentView Grid.Column="2"
                             BindingContext="{x:Static utils:NetworkMonitor.Instance}"
                             ControlTemplate="{StaticResource NetworkStatusBadgeTemplate}"
                             VerticalOptions="Center"
                             HorizontalOptions="End" />
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- User Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¥" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Management Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Reports Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“ˆ" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    
                </VerticalStackLayout>

                <!-- Spacer to push logout to bottom -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Administrator Profile (Above Logout) -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0"
                            InputTransparent="False">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12" InputTransparent="True">
                            <Label Text="ðŸ”’" FontSize="18"/>
                            <Label Text="Administrator" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAdminProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button at Bottom -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Ticket Management" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>
                        <Label Text="Manage and assign support tickets" 
                               FontSize="13" 
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- New Ticket Button -->
                    <Button Grid.Column="1"
                            Text="+ New Ticket"
                            BackgroundColor="#005BA5"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnNewTicketClicked"/>
                </Grid>

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Open Tickets -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Open Tickets" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="âŒ" FontSize="16"/>
                            </Grid>
                            <Label x:Name="AdminOpenCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#EF4444"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- In Progress -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="In Progress" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="â³" FontSize="16"/>
                            </Grid>
                            <Label x:Name="AdminInProgressCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Resolved -->
                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Resolved" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="âœ…" FontSize="16"/>
                            </Grid>
                            <Label x:Name="AdminResolvedCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#10B981"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Search Box -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" ColumnSpacing="10">
                        <Border Grid.Column="0"
                                BackgroundColor="#F9FAFB"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Grid.Column="0" 
                                       Text="ðŸ”" 
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Entry Grid.Column="1"
                                       x:Name="SearchEntry"
                                       Placeholder="Search tickets by ID, title, or student..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"
                                       TextChanged="OnSearchTextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Filter Buttons -->
                        <Button Grid.Column="1"
                                Text="All"
                                BackgroundColor="#005BA5"
                                TextColor="White"
                                FontSize="13"
                                Padding="15,8"
                                CornerRadius="6"
                                Clicked="OnFilterAllClicked"/>
                        <Button Grid.Column="2"
                                Text="Open"
                                BackgroundColor="#F3F4F6"
                                TextColor="#6B7280"
                                FontSize="13"
                                Padding="15,8"
                                CornerRadius="6"
                                Clicked="OnFilterOpenClicked"/>
                        <Button Grid.Column="3"
                                Text="Pending"
                                BackgroundColor="#F3F4F6"
                                TextColor="#6B7280"
                                FontSize="13"
                                Padding="15,8"
                                CornerRadius="6"
                                Clicked="OnFilterPendingClicked"/>
                        <Button Grid.Column="4"
                                Text="Closed"
                                BackgroundColor="#F3F4F6"
                                TextColor="#6B7280"
                                FontSize="13"
                                Padding="15,8"
                                CornerRadius="6"
                                Clicked="OnFilterClosedClicked"/>
                    </Grid>
                </Border>

                <!-- Tickets Table -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>

                    <CollectionView x:Name="TicketsCollectionView"
                                    SelectionMode="None">
                        <CollectionView.Header>
                            <Grid BackgroundColor="#F9FAFB" 
                                  Padding="20,12"
                                  ColumnDefinitions="0.8*,1.5*,1.2*,0.8*,0.8*,1*">
                                <Label Grid.Column="0" 
                                       Text="Ticket #" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                <Label Grid.Column="1" 
                                       Text="Title" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                <Label Grid.Column="2" 
                                       Text="Student" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                <Label Grid.Column="3" 
                                       Text="Status" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                <Label Grid.Column="4" 
                                       Text="Priority" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                <Label Grid.Column="5" 
                                       Text="Actions" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                            </Grid>
                        </CollectionView.Header>

                        <CollectionView.EmptyView>
                            <Label Text="No tickets found"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,20"
                                   TextColor="#6B7280"/>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="20,16"
                                      ColumnDefinitions="0.8*,1.5*,1.2*,0.8*,0.8*,1*"
                                      BackgroundColor="White">

                                    <Label Grid.Column="0" 
                                           Text="{Binding TicketNumber}" 
                                           FontSize="14" 
                                           TextColor="#1F2937"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Title}" 
                                           FontSize="14" 
                                           TextColor="#1F2937"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="2" 
                                           Text="{Binding CreatedByName}" 
                                           FontSize="14" 
                                           TextColor="#6B7280"
                                           VerticalOptions="Center"/>

                                    <Border Grid.Column="3"
                                            BackgroundColor="{Binding StatusColor}"
                                            Padding="10,6"
                                            StrokeThickness="0"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Status}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"/>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnChangeStatusClicked"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                    </Border>

                                    <Label Grid.Column="4"
                                           Text="{Binding Priority}"
                                           FontSize="12" 
                                           TextColor="{Binding PriorityTextColor}"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>

                                    <HorizontalStackLayout Grid.Column="5" Spacing="10" VerticalOptions="Center">
                                        <Button Text="View"
                                                Padding="14,6"
                                                FontSize="12"
                                                BackgroundColor="#005BA5"
                                                TextColor="White"
                                                CornerRadius="6"
                                                CommandParameter="{Binding .}"
                                                Clicked="OnViewTicketClicked"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Ticket Details Overlay -->
        <Border x:Name="TicketDetailsOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="700"
                    Padding="0"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,* ,Auto" Padding="30">
                    <!-- Header -->
                    <Grid Row="0" ColumnDefinitions="*,Auto" Padding="0,0,0,10">
                        <VerticalStackLayout Spacing="2">
                            <Label x:Name="DetailTitleLabel"
                                   Text="Ticket Title"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label x:Name="DetailTicketNumberLabel"
                                   Text="Ticket Number"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="1"
                                Text="âœ•"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="Transparent"
                                TextColor="#6B7280"
                                FontSize="22"
                                Clicked="OnCloseDetailsClicked"/>
                    </Grid>

                    <!-- Metadata -->
                    <Grid Row="1" ColumnDefinitions="*,*" ColumnSpacing="20" Padding="0,0,0,20">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Student"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                            <Label x:Name="DetailStudentLabel"
                                   Text="Student Name"
                                   FontSize="15"
                                   TextColor="#1F2937"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="Assigned To"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                            <Label x:Name="DetailAssignedLabel"
                                   Text="Assignee"
                                   FontSize="15"
                                   TextColor="#1F2937"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="0" Spacing="6" Margin="0,70,0,0">
                            <Label Text="Priority"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                            <Label x:Name="DetailPriorityLabel"
                                   Text="High"
                                   FontSize="15"
                                   TextColor="#1F2937"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="6" Margin="0,70,0,0">
                            <Label Text="Status"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                            <Label x:Name="DetailStatusLabel"
                                   Text="Open"
                                   FontSize="15"
                                   TextColor="#1F2937"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Comments -->
                    <Grid Row="2" RowDefinitions="Auto,*" ColumnDefinitions="*" Padding="0,0,0,20">
                        <Label Text="Conversation"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1F2937"/>
                        <ScrollView Grid.Row="1">
                            <VerticalStackLayout x:Name="CommentsStackLayout" Spacing="12"/>
                        </ScrollView>
                    </Grid>

                    <!-- Reply box -->
                    <Grid Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Editor x:Name="AdminCommentEditor"
                                Placeholder="Type your response..."
                                AutoSize="TextChanges"
                                BackgroundColor="#F9FAFB"
                                TextColor="#1F2937"
                                PlaceholderColor="#9CA3AF"
                                HeightRequest="80"/>
                        <VerticalStackLayout Grid.Column="1" Spacing="10">
                            <Button Text="Send Reply"
                                    BackgroundColor="#005BA5"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    Clicked="OnSendCommentClicked"/>
                            <Button Text="Close Ticket"
                                    BackgroundColor="#10B981"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    Clicked="OnResolveTicketClicked"/>
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Border>
        </Border>

        <!-- Create Ticket Modal Overlay -->
        <Border x:Name="CreateTicketModalOverlay"
                Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"
                BackgroundColor="#CC000000"
                IsVisible="False"
                Padding="0">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </Border.GestureRecognizers>
            
            <!-- Create Ticket Modal -->
            <Border BackgroundColor="White"
                    WidthRequest="500"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">
                    <!-- Modal Header with Background -->
                    <Border BackgroundColor="#005BA5" Padding="30,25" StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="6">
                                <Label Text="Create Support Ticket" 
                                       FontSize="22" 
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Submit a new support request" 
                                       FontSize="13" 
                                       TextColor="#DBEAFE"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="28"
                                   TextColor="White"
                                   VerticalOptions="Start"
                                   Margin="0,-5,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseModalTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <VerticalStackLayout Spacing="18" Padding="30,25">
                        
                        <!-- Title Field -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Title *" 
                                   FontSize="14" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="14,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="NewTicketTitleEntry"
                                       Placeholder="Brief description of the issue"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Category and Priority Row -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <!-- Category Picker -->
                            <VerticalStackLayout Grid.Column="0" Spacing="10">
                                <Label Text="Category *" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="NewTicketCategoryPicker"
                                        TextColor="#2C3E50"
                                        BackgroundColor="White"
                                        FontSize="14">
                                    <Picker.Items>
                                        <x:String>Select category</x:String>
                                        <x:String>Academic</x:String>
                                        <x:String>Facilities</x:String>
                                        <x:String>Administration</x:String>
                                        <x:String>Technical</x:String>
                                        <x:String>Financial</x:String>
                                        <x:String>Other</x:String>
                                    </Picker.Items>
                                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                </Picker>
                            </VerticalStackLayout>

                            <!-- Priority Picker -->
                            <VerticalStackLayout Grid.Column="1" Spacing="10">
                                <Label Text="Priority *" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="NewTicketPriorityPicker"
                                        TextColor="#2C3E50"
                                        BackgroundColor="White"
                                        FontSize="14">
                                    <Picker.Items>
                                        <x:String>Select priority</x:String>
                                        <x:String>Low</x:String>
                                        <x:String>Medium</x:String>
                                        <x:String>High</x:String>
                                    </Picker.Items>
                                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                </Picker>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Description Field -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Description *" 
                                   FontSize="14" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="14,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Editor x:Name="NewTicketDescriptionEditor"
                                        Placeholder="Provide detailed information about the issue..."
                                        PlaceholderColor="#9CA3AF"
                                        TextColor="#2C3E50"
                                        BackgroundColor="Transparent"
                                        HeightRequest="110"
                                        FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,8,0,0">
                            <Button Grid.Column="0"
                                    Text="Cancel"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="#6B7280"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    Clicked="OnCancelNewTicketClicked"/>
                            <Button Grid.Column="1"
                                    Text="Submit Ticket"
                                    BackgroundColor="#005BA5"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    Clicked="OnSubmitNewTicketClicked"/>
                        </Grid>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>
        </Border>

    </Grid>
</ContentPage>
