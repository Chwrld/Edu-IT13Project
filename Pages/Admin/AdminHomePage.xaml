<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppIT13.Models"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.Pages.Admin.AdminHomePage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <!-- Network Status Indicator -->
                <HorizontalStackLayout Grid.Column="2" Spacing="5" VerticalOptions="Center">
                    <Label Text="{Binding Source={x:Static utils:NetworkMonitor.Instance}, Path=IsConnected, Converter={StaticResource NetworkStatusConverter}}" 
                           FontSize="20"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding Source={x:Static utils:NetworkMonitor.Instance}, Path=IsConnected, Converter={StaticResource NetworkStatusTextConverter}}" 
                           TextColor="White"
                           FontSize="12"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- User Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¥" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“ˆ" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                    
                </VerticalStackLayout>

                <!-- Spacer to push logout to bottom -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Administrator Profile (Above Logout) -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ”’" FontSize="18"/>
                            <Label Text="Administrator" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAdminProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button at Bottom -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Welcome Banner -->
                <Border BackgroundColor="#005BA5"
                        StrokeThickness="0"
                        Padding="30,25"
                        Margin="0,15,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Admin Dashboard" 
                               TextColor="White" 
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="MontserratBold"/>
                        <Label Text="Manage your university system effectively." 
                               TextColor="White" 
                               FontSize="14"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Statistics Cards Row -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Total Users Card -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Total Users" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸ‘¥" FontSize="20"/>
                            </Grid>
                            <Label x:Name="TotalUsersValueLabel"
                                   Text="1,248" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="TotalUsersChangeLabel"
                                   Text="â†‘ 12% this month" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Active Tickets Card -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="10">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Active Tickets" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸŽ«" FontSize="20"/>
                            </Grid>
                            <Label x:Name="ActiveTicketsValueLabel"
                                   Text="47" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="ActiveTicketsSubLabel"
                                   Text="23 pending review" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Announcements Card -->
                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="10">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Announcements" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸ“¢" FontSize="20"/>
                            </Grid>
                            <Label x:Name="AnnouncementsValueLabel"
                                   Text="12" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label x:Name="AnnouncementsSubLabel"
                                   Text="This week" 
                                   FontSize="11" 
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </Border>

                    
                </Grid>

                <!-- Content Row: Recent Activity and Quick Actions -->
                <Grid ColumnDefinitions="1.5*,*" ColumnSpacing="20">
                    
                    <!-- Recent Activity Section -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                                <Label Text="ðŸ“‹" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=" Recent Activity" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                         FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Latest system activities" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>
                            <VerticalStackLayout x:Name="RecentActivityList"
                                                 Spacing="12"
                                                 BindableLayout.ItemsSource="{Binding RecentActivities}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="models:AdminActivityItem">
                                        <Border BackgroundColor="#EFF6FF"
                                                Padding="12"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                                <Border Grid.Column="0"
                                                        BackgroundColor="{Binding AccentColor}"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <Ellipse/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding Icon}" 
                                                           FontSize="16"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                    <Label Text="{Binding Title}" 
                                                           FontSize="13" 
                                                           FontAttributes="Bold"
                                                           TextColor="#2C3E50"/>
                                                    <Label Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           TextColor="#6B7280"
                                                           LineBreakMode="TailTruncation"/>
                                                </VerticalStackLayout>
                                                <Label Grid.Column="2" 
                                                       Text="{Binding RelativeTime}" 
                                                       FontSize="11" 
                                                       TextColor="#9CA3AF"
                                                       VerticalOptions="Start"
                                                       HorizontalTextAlignment="End"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <Label x:Name="RecentActivityEmptyLabel"
                                   Text="No recent activity yet"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   IsVisible="False"/>

                        </VerticalStackLayout>
                    </Border>

                    <!-- Quick Actions Section -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout>
                                <Label Text="âš¡" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=" Quick Actions" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                         FontFamily="MontserratBold"
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="Common administrative tasks" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   Margin="0,-10,0,0"/>

                            <!-- Action 1 -->
                            <Button Text="ðŸ“ Create Announcement"
                                    BackgroundColor="#005BA5"
                                    TextColor="White"
                                    FontSize="13"
                                    CornerRadius="8"
                                    Clicked="OnCreateAnnouncementClicked"/>

                            <!-- Action 2 -->
                            <Button Text="âž• Add New User"
                                    BackgroundColor="#3B82F6"
                                    TextColor="White"
                                    FontSize="13"
                                    CornerRadius="8"
                                    Clicked="OnAddUserClicked"/>

                            <!-- Action 3 -->
                            <Button Text="ðŸ“Š View Reports"
                                    BackgroundColor="#10B981"
                                    TextColor="White"
                                    FontSize="13"
                                    CornerRadius="8"
                                    Clicked="OnViewReportsClicked"/>

                            
                            <!-- Divider -->
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#E5E7EB" 
                                     Margin="0,10"/>

                            <!-- Export Data -->
                            <Border BackgroundColor="#F9FAFB"
                                    Padding="12"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="ðŸ“¥ Export Data" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"/>
                                    <Label Text="Download reports and user data in CSV format" 
                                           FontSize="11" 
                                           TextColor="#6B7280"
                                           LineBreakMode="WordWrap"/>
                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <Label Grid.Column="0"
                                               Text="Generates ticket summary and teacher-class-student CSV files."
                                               FontSize="10"
                                               TextColor="#6B7280"
                                               LineBreakMode="WordWrap"/>
                                        <Button Grid.Column="1"
                                                Text="Download"
                                                BackgroundColor="White"
                                                TextColor="#005BA5"
                                                FontSize="11"
                                                Padding="16,8"
                                                CornerRadius="6"
                                                BorderColor="#005BA5"
                                                BorderWidth="1"
                                                Clicked="OnDownloadDataClicked"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>

                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
