<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppIT13"
             xmlns:utils="clr-namespace:MauiAppIT13.Utils"
             x:Class="MauiAppIT13.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <utils:NetworkStatusConverter x:Key="NetworkStatusConverter" />
            <utils:NetworkStatusTextConverter x:Key="NetworkStatusTextConverter" />
            <utils:NetworkStatusColorConverter x:Key="NetworkStatusColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
